<%- include('include/head.ejs') %>

<%- include('include/navigation.ejs') %>

    <main class="main-content">
        <div class="box">
            <div class="Heading"><h2>Add Product</h2></div>
        <form class="product_form" action="/admin/productSave" method="POST">
            <div class="labelBox">
            <label for="product">Product Title</label>
            <input type="text" name="title"/>
        </div>
        <div class="labelBox">
            <label for="price">Product Price</label>
            <input type="text" name="price" />
        </div>
        <div class="labelBox">
            <label for="imageUrl">Product image</label>
            <input type="text" name="imageUrl" />
        </div>
        <div class="labelBox">
            <label for="description">Product Description</label>
            <textarea name="description" rows="4"></textarea>
        </div>
            <button type="submit" class="submitBn">Submit</button>
        </form>
    </div>
    </main>

